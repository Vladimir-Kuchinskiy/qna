$('.answer-errors').hide();
<% if @answer.errors.present? %>
  <% @answer.errors.full_messages.each do |message| %>
    $('.answer-errors').show();
    $('.answer-errors').html('<%= j message %>');
  <% end %>
<% else %>
  $('.answers').append('<%= j render 'answer', answer: @answer %>');
  $('.answer_body').val('');
<% end %>
<%= ajax_flash('#main') %>
